@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div style="margin: 20px">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Status</th>
            <th scope="col">Dead Line</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var todo in @Model.Todos)
        {
            <tr>
                <th scope="row">1</th>
                <td>@todo.Title</td>
                <td>@todo.IsDone</td>
                <td>@todo.DeadLine</td>
            </tr>
        }
        </tbody>
    </table>

    <div class="align-content-center">
        <button class="btn btn-primary" asp-page="/NewTask">Add</button>
    </div>
</div>
